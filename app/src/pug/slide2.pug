extends layouts/layout-bare

block head
    link(rel="stylesheet" href="/stylesheets/swiper-bundle.css")
    link(rel="stylesheet" href="/stylesheets/sliders.css")
    script(src="/js/swiper-bundle.js")


block content  
  .swiper-container.env-slides
    // Additional required wrapper
    .swiper-wrapper
      // Slides
      .swiper-slide.slide1 
      .swiper-slide.slide2
      .swiper-slide.slide3
      .swiper-slide.slide4
    .swiper-pagination
    .swiper-scrollbar

block scripts
  script.
    var vsWidth = window.innerWidth
      , options = {
        direction: 'horizontal'
        , pagination: {
          el: '.swiper-pagination'
        }
      }

    if( vsWidth > 1200 ) options.slidesPerView = 2;

    var mySwiper = new Swiper ('.swiper-container', options)
