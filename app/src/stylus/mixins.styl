btn()
  display inline-block
  text-align center
  text-transform uppercase
  white-space nowrap
  width auto
  margin-top med-size
  -webkit-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none
  -webkit-appearance none
  -moz-appearance none
  appearance none
  font med-size/med-size font-corp
  //font med-size/med-size system-font-black
  font-weight 900
  border 1px solid transparent
  padding med-size med-size 
  border-radius(3px) 
  transition color .15s
  background-color prime-col
  color white
  cursor pointer
  ease-in-out,background-color .15s
  ease-in-out,border-color .15s
  ease-in-out,box-shadow .15s
  ease-in-out

square()
  position relative
  width 100%
  background-repeat no-repeat
  background-position center center
  background-size cover
  &::before
    content ''
    display block
    padding-top 100%

styledScroll()
  scrollbar-color background*2.5 background
  scrollbar-track-color background
  scrollbar-face-color background*2.5
  &::-webkit-scrollbar 
    background-color background
  &::-webkit-scrollbar-thumb
    background-color background*2
    border-radius(micro-size)
    border solid micro-size*0.5 background
    width 2px
  &::-webkit-scrollbar-corner
    background-color background*1.5
  &::-webkit-resizer
    background-color background*1.3

rectangle()
  position relative
  width 100%
  background-repeat no-repeat
  background-position center center
  background-size cover
  &::before
    content ''
    display block
    padding-top 50%

aspect( padding )
  position relative
  width 100%
  background-repeat no-repeat
  background-position center center
  background-size cover
  &::after
    content ''
    display block
    padding-top padding

cntrStyle()
  position absolute
  top 50%
  left 50%
  width 100%
  -webkit-transform translate(-50%,-50%);
  -moz-transform translate(-50%,-50%);
  -ms-transform translate(-50%,-50%);
  -0-transform translate(-50%,-50%);
  transform translate(-50%,-50%);

border-radius()
  -moz-border-radius arguments
  -webkit-border-radius arguments
  border-radius arguments

appearance()
  -webkit-appearance arguments
  -moz-appearance arguments
  -o-appearance arguments
  appearance arguments
  
background-linear-gradient()
  background-color startColor
  background-image -webkit-linear-gradient(arguments)
  background-image -moz-linear-gradient(arguments)
  background-image -ms-linear-gradient(arguments)
  background-image -o-linear-gradient(arguments)
  background-image linear-gradient(arguments)

background-radial-gradient(position, type, start, end)
  background-image -webkit-gradient(radial, position, type, start, end)
  background-image -webkit-radial-gradient(position, type, start, end)
  background-image -ms-radial-gradient(position, type, start, end)
  background-image -o-radial-gradient(position, type, start, end)
  background-image -moz-radial-gradient(position, type, start, end)

box-shadow(args...) 
  -moz-box-shadow arg
  -webkit-box-shadow args
  box-shadow args

clearfix()
  content ''
  visibility none
  display block
  height 0
  clear both

rotateElm(angle)
  -webkit-transform rotate(angle)
  -moz-transform rotate(angle)
  transform rotate(angle)

/*common elements*/
div, a, form, input, textarea
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
a
  text-decoration none
  color inherit
